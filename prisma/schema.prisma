generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  username      String         @unique
  passwordItems PasswordItem[]
  cardItems     CardItem[]
  pinItems      PinItem[]
  noteItems     NoteItem[]
}

model PasswordItem {
  id       String @id @default(uuid())
  type     String @default("password")
  website  String
  username String
  password String
  userId   String
  user     User   @relation(fields: [userId], references: [id])
}

model CardItem {
  id             String @id @default(uuid())
  type           String @default("card")
  cardNumber     String
  expiryDate     String
  cvv            String
  cardHolderName String
  userId         String
  user           User   @relation(fields: [userId], references: [id])
}

model PinItem {
  id     String @id @default(uuid())
  type   String @default("pin")
  pin    String
  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model NoteItem {
  id     Int    @id @default(autoincrement())
  type   String @default("note")
  note   String
  userId String
  user   User   @relation(fields: [userId], references: [id])
}
